<resources>

    <style name="splashScreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
    </style>

    <!-- Main activity theme -->
    <style name="PratilipiTheme" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/PratilipiTheme.ActionBar</item>
    </style>

    <!-- Reader activity theme-->
    <style name="ReaderTheme" parent="@style/PratilipiTheme">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="PratilipiTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo_new</item>
    </style>

    <!-- Pratilipi Textbox styling -->
    <style name="PratilipiTheme.EditText">
        <item name="android:paddingLeft">3dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="background">@color/pratilipi_textbox_background</item>
    </style>

    <!-- Rating Bar Style-->
    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar_full</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">23dip</item>
    </style>
</resources>
