<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/home_card_view"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="wrap_content">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/card_layout_cover_imageview"
            android:layout_gravity="center|top"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:src="@drawable/ic_default_image_120"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/card_layout_title_textview"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15dp"
            android:paddingTop="3dp"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:text="Testing"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <!--<RatingBar-->
            <!--android:id="@+id/averageRatingRatingBar"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/CustomRatingBar"-->
            <!--android:numStars="5"-->
            <!--android:stepSize="0.1"-->
            <!--android:isIndicator="true"-->
            <!--android:paddingTop="3dp" />-->

            <TextView
                android:id="@+id/card_layout_price_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009245"
                android:gravity="center"
                android:textSize="12dp"
                android:paddingTop="2dp"
                android:text="Free"/>
            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:paddingTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>